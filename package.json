{
  "name": "kings-sword",
  "version": "1.0.1",
  "description": "Logiciel d'étude des sermons de W.M. Branham",
  "main": "main.js",
  "author": "Bienvenu Sédin Massamba",
  "scripts": {
    "start": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently \"npm start\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "npm run build && electron-builder",
    "publish": "npm run build && electron-builder --publish always"
  },
  "dependencies": {
    "@google/genai": "^1.34.0",
    "docx": "^8.5.0",
    "electron-updater": "^6.1.8",
    "file-saver": "^2.0.5",
    "jspdf": "^4.0.0",
    "lucide-react": "^0.562.0",
    "marked": "^12.0.2",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^39.2.7",
    "electron-builder": "^24.13.3",
    "typescript": "^5.3.3",
    "vite": "^7.3.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.kingssword.app",
    "productName": "King's Sword",
    "copyright": "Copyright © 2024 Bienvenu Sédin Massamba. Tous droits réservés.",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js"
    ],
    "extraResources": [
      {
        "from": "public",
        "to": "public",
        "filter": [
          "**/*"
        ]
      }
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "boukamass",
        "repo": "King-s-Sword"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "public/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "King's Sword",
      "installerIcon": "public/icon.ico",
      "uninstallerIcon": "public/icon.ico",
      "installerHeaderIcon": "public/icon.ico"
    }
  }
}
